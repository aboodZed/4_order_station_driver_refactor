<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.reset.two.ResetStep2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_padding"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/large_padding"
        android:background="@drawable/dark_button"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingBottom="@dimen/small_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:text="@string/phone_verification"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:gravity="center"
            android:text="@string/verife_string"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text" />

        <com.poovam.pinedittextfield.LinePinField
            android:id="@+id/lf_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_marginEnd="@dimen/medium_padding"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/small_margin"
            android:paddingEnd="@dimen/small_margin"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textSelectHandle="@drawable/text_handle"
            android:textSize="@dimen/large_text"
            app:distanceInBetween="10dp"
            app:fieldColor="@color/gray"
            app:highlightColor="@color/colorPrimary"
            app:highlightEnabled="true"
            app:highlightSingleFieldMode="true"
            app:isCursorEnabled="false"
            app:isCustomBackground="true"
            app:lineThickness="0.5dp"
            app:noOfFields="4" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_container"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@drawable/blue_button"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/small_margin">

            <TextView
                android:id="@+id/tv_resend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/resend"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_button"
                android:paddingStart="@dimen/medium_padding"
                android:paddingTop="@dimen/little_text"
                android:paddingEnd="@dimen/medium_padding"
                android:paddingBottom="@dimen/little_text"
                android:text="Resend"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>