<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="@dimen/medium_padding"
    tools:context=".feature.home.editProfile.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text"
            android:textStyle="bold" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_driver_avatar"
                    android:layout_width="@dimen/logo_height"
                    android:layout_height="@dimen/logo_height"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@drawable/img_user" />

                <ImageView
                    android:id="@+id/iv_edit_driver_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/ic_camera_ring" />

                <ProgressBar
                    android:id="@+id/pb_wait_avater"
                    android:layout_width="@dimen/large_margin"
                    android:layout_height="@dimen/large_margin"
                    android:layout_gravity="center" />
            </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_text" />

        <EditText
            android:id="@+id/et_enter_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/gray"
            android:gravity="start"
            android:focusable="false"
            android:hint="@string/type_email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/medium_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_text" />

        <EditText
            android:id="@+id/et_enter_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/gray"
            android:gravity="start"
            android:focusable="false"
            android:hint="@string/type_phone"
            android:inputType="phone"
            android:padding="@dimen/medium_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_text" />

        <EditText
            android:id="@+id/et_enter_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/gray"
            android:gravity="start"
            android:hint="@string/type_address"
            android:inputType="text"
            android:padding="@dimen/medium_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_text" />

        <EditText
            android:id="@+id/et_enter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/gray"
            android:gravity="start"
            android:hint="@string/type_password"
            android:inputType="textPassword"
            android:padding="@dimen/medium_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_text" />

        <EditText
            android:id="@+id/et_enter_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/gray"
            android:gravity="start"
            android:hint="@string/type_confirm_paswword"
            android:inputType="textPassword"
            android:padding="@dimen/medium_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Photos"
            android:textSize="@dimen/large_text"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/medium_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/your_id"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_id_pic"
                        android:layout_width="@dimen/logo_width"
                        android:layout_height="@dimen/logo_width"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/img_user" />

                    <ImageView
                        android:id="@+id/iv_edit_id_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/ic_camera_ring" />

                    <ProgressBar
                        android:id="@+id/pb_wait_id_pic"
                        android:layout_width="@dimen/medium_margin"
                        android:layout_height="@dimen/medium_margin"
                        android:layout_gravity="center" />
                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/your_vehicle"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_your_vehicle"
                        android:layout_width="@dimen/logo_width"
                        android:layout_height="@dimen/logo_width"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/img_user" />

                    <ImageView
                        android:id="@+id/iv_edit_your_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/ic_camera_ring" />

                    <ProgressBar
                        android:id="@+id/pb_wait_your_vehicle"
                        android:layout_width="@dimen/medium_margin"
                        android:layout_height="@dimen/medium_margin"
                        android:layout_gravity="center" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/your_license"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_your_license"
                        android:layout_width="@dimen/logo_width"
                        android:layout_height="@dimen/logo_width"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/img_user" />

                    <ImageView
                        android:id="@+id/iv_edit_your_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/ic_camera_ring" />

                    <ProgressBar
                        android:id="@+id/pb_wait_your_license"
                        android:layout_width="@dimen/medium_margin"
                        android:layout_height="@dimen/medium_margin"
                        android:layout_gravity="center" />
                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/vehicle_license"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_vehicle_license"
                        android:layout_width="@dimen/logo_width"
                        android:layout_height="@dimen/logo_width"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/img_user" />

                    <ImageView
                        android:id="@+id/iv_edit_vehicle_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/ic_camera_ring" />

                    <ProgressBar
                        android:id="@+id/pb_wait_vehicle_license"
                        android:layout_width="@dimen/medium_margin"
                        android:layout_height="@dimen/medium_margin"
                        android:layout_gravity="center" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="@dimen/alpha_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/vehicle_Inc"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_text"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_insurance_license"
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_width"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/img_user" />

            <ImageView
                android:id="@+id/iv_edit_insurance_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_camera_ring" />

            <ProgressBar
                android:id="@+id/pb_wait_insurance_license"
                android:layout_width="@dimen/medium_margin"
                android:layout_height="@dimen/medium_margin"
                android:layout_gravity="center" />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>
        
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_container"
            android:layout_margin="@dimen/medium_margin"
            android:background="@drawable/blue_button"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text" />

    </LinearLayout>
</ScrollView>