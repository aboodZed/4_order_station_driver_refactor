<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/medium_padding"
    tools:context=".feature.home.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_padding"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:background="@drawable/dark_button"
        android:padding="@dimen/small_padding">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_driver_avatar"
                android:layout_width="@dimen/large_image"
                android:layout_height="@dimen/large_image"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/img_user" />

            <ProgressBar
                android:id="@+id/pb_wait"
                android:layout_width="@dimen/large_margin"
                android:layout_height="@dimen/large_margin"
                android:layout_gravity="center" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/small_margin"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frameLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rb_user"
                android:progressBackgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_button"
        android:drawableStart="@drawable/ic_privacy"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:padding="@dimen/medium_padding"
        android:text="@string/privacy_policy"
        android:textColor="@color/gray"
        android:textSize="@dimen/text"
        android:drawablePadding="@dimen/medium_padding"
        android:layout_marginBottom="@dimen/rate"/>

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_button"
        android:drawableStart="@drawable/ic_contact"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:padding="@dimen/medium_padding"
        android:text="@string/contact_us"
        android:textColor="@color/gray"
        android:textSize="@dimen/text"
        android:drawablePadding="@dimen/medium_padding"
        android:layout_marginBottom="@dimen/rate"/>

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_button"
        android:drawableStart="@drawable/ic_world"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:padding="@dimen/medium_padding"
        android:text="@string/language"
        android:textColor="@color/gray"
        android:textSize="@dimen/text"
        android:drawablePadding="@dimen/medium_padding"
        android:layout_marginBottom="@dimen/rate"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textSize="@dimen/text"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/medium_padding"
        android:layout_marginTop="@dimen/large_text"/>

    </LinearLayout>
</ScrollView>